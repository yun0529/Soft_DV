<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/ll_characteristic"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingEnd="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="분류군"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:alpha="0.75"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_species"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="분류군"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:alpha="0.75"
                android:layout_weight="1"/>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DCDCDC"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingEnd="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="몸길이 (수컷)"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:alpha="0.75"
                android:layout_weight="1"/>


            <TextView
                android:id="@+id/tv_len_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23 ~ 40 mm"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:alpha="0.75"
                android:layout_weight="1"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DCDCDC"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingEnd="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="몸길이 (암컷)"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:alpha="0.75"
                android:layout_weight="1"/>


            <TextView
                android:id="@+id/tv_len_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="27 ~ 30 mm"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:alpha="0.75"
                android:layout_weight="1"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DCDCDC"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingEnd="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="몸색깔"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:alpha="0.75"
                android:layout_weight="1"/>


            <TextView
                android:id="@+id/tv_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="황갈색, 적갈색"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:alpha="0.75"
                android:layout_weight="1"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DCDCDC"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingEnd="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수명"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:alpha="0.75"
                android:layout_weight="1"/>


            <TextView
                android:id="@+id/tv_life_span"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="약 6개월"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:alpha="0.75"
                android:layout_weight="1"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DCDCDC"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingEnd="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서식지"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:alpha="0.75"
                android:layout_weight="1"/>


            <TextView
                android:id="@+id/tv_habitat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전국, 중국 동북부, 일본"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:alpha="0.75"
                android:layout_weight="1"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DCDCDC"/>

</LinearLayout>